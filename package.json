{
    "name": "generator-ui5-boilerplate",
    "version": "0.4.3",
    "description": "Generator for UI5 project boilerplate incl. documentation",
    "homepage": "https://github.com/nlsltz/generator-ui5-boilerplate",
    "author": {
        "name": "Nils Lutz",
        "email": "info@nilslutz.de",
        "url": "https://nilslutz.de"
    },
    "files": [
        "generators"
    ],
    "main": "generators/index.js",
    "keywords": [
        "ui5",
        "openui5",
        "sapui5",
        "boilerplate",
        "docsify",
        "scaffold",
        "javascript",
        "sap",
        "yeoman-generator"
    ],
    "devDependencies": {
        "eslint": "^5.0.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-xo": "^0.23.0",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^0.14.3",
        "jest": "^23.2.0",
        "lint-staged": "^7.2.0",
        "nsp": "^3.2.1",
        "prettier": "^1.16.4",
        "standard-version": "^5.0.2",
        "yeoman-assert": "^3.1.0",
        "yeoman-test": "^1.7.0"
    },
    "engines": {
        "npm": ">= 4.0.0"
    },
    "dependencies": {
        "yeoman-generator": "^3.0.0",
        "chalk": "^2.1.0",
        "yosay": "^2.0.1"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "scripts": {
        "prepublishOnly": "nsp check",
        "pretest": "eslint .",
        "precommit": "lint-staged",
        "test": "jest",
        "changelog": "git-chglog -o CHANGELOG.md",
        "release": "standard-version -s"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "*.css": [
          "prettier --write",
          "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "xo",
            "prettier"
        ],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                  "printWidth": 120,
                  "tabWidth": 4,
                  "useTabs": false,
                  "singleQuote": true,
                  "trailingComma": "es5",
                  "bracketSpacing": false,
                  "jsxBracketSameLine": false,
                  "parser": "babel"
                }
            ]
        },
        "plugins": [
            "prettier"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nlsltz/generator-ui5-boilerplate"
    },
    "license": "MIT"
}
