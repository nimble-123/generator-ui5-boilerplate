<mvc:View
	controllerName="<%= projectNamespace %>.controller.settings.MasterSettings"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page id="masterSettingsPage"
		showHeader="false">
		<List
			id="masterSettingsList"
			items="{side>/masterSettings}"
			mode="SingleSelectMaster"
			selectionChange="onMasterPressed">
			<StandardListItem
				title="{side>title}"
				type="Navigation"
				selected="{= ${device>/system/phone} ? false : ${side>selected}}"/>
		</List>
	</Page>
</mvc:View>